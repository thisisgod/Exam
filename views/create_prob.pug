extends ./layouts/prob_main

block content
    style.
        table,th,td {
                border:1px solid darkslategrey;
                padding:auto;
                margin:auto;
                margin-top:50px;
                width:400px;
                text-align:center;
                vertical-align:middle;
                line-height:50px;
            }
    div
        h3 문제 생성
            script.
                document.write("<form action=\"/create_prob/" + #{exam_id} + "\" method = \"post\" enctype=\"multipart/form-data\">");

            table
                tr
                    td 문제 이름
                    td
                        input(type="text", name="title")
                        script.
                            document.write("<input type=\"hidden\" value=\""+ #{prob_cnt} + "\" name=\"prob_cnt\">")
                tr
                    td 문제 배점
                    td
                        input(type="text", name="num")
                tr
                    td 문제 그림
                    td
                        input(type="file", name="file")
                tr
                    td 문제 종류
                    td
                        select(name="kind")
                            option(value="N") 일반 객관식
                            option(value="P") 그림 객관식
                            option(value="S") 주관식
                tr
                    td 제작자
                    td
                        input(type="text", name="rgst_id")
                tr
                    td
                    td
                        input(type="submit", value="생성")
                script.
                    document.write("</form>");    